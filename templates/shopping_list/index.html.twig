{% extends 'base.html.twig' %}

{% block title %}Liste de Courses{% endblock %}

{% block body %}
    <div class="container mx-auto px-6 py-12">
        <h1 class="text-4xl font-bold text-center mb-8">Liste de Courses</h1>

        {% if shoppingList is not empty %}
            <ul class="list-disc list-inside bg-white p-6 rounded shadow-md">
                {% for ingredient, quantity in shoppingList %}
                    <li>{{ ingredient }} x{{ quantity }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-600 text-center">Aucun ingrédient à afficher.</p>
        {% endif %}
    </div>
{% endblock %}
