{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-center mb-6">Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, { attr: { class: 'space-y-4' } }) }}
        <div>
            {{ form_label(registrationForm.email, null, { attr: { class: 'block text-gray-700 font-semibold' } }) }}
            {{ form_widget(registrationForm.email, { attr: { class: 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', { attr: { class: 'block text-gray-700 font-semibold' } }) }}
            {{ form_widget(registrationForm.plainPassword, { attr: { class: 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="flex items-center">
            {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'mr-2' } }) }}
            {{ form_label(registrationForm.agreeTerms, 'Accepter les termes', { attr: { class: 'text-gray-700' } }) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">
            S'incrire
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
